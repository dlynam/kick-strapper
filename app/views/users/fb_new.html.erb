<%= page_heading("Create a username") %>
<% content_for :head do %>
  <style type="text/css">
    .content{ padding-top: 50px; }
    .content .span6 { margin-top: 40px; }
  </style>
<% end %>
<% if @user.errors.any? %>
  <div class="alert alert-error">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <strong>Uh oh!</strong> Some errors occurred below.
  </div>
<% end %>
<% if flash[:notice] %>
  <div class="alert alert-success">
    <button type="button" class="close" data-dismiss="alert">×</button>
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="row">
  <div class="span6 offset2">
    <%= twitter_bootstrap_form_for @user, :html => { :class => 'form-horizontal'} do |user| %>
      <%= user.fieldset 'Welcome' do %>
        <%= user.text_field :username %>
        <%= user.actions do %>
          <%= user.submit 'Create Account' %>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>
